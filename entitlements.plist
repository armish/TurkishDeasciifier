<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime Requirements -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <!-- Allow JIT for Swift runtime if needed -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Required for accessibility features (global hotkey) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Allow user-selected file access for pattern file -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Disable library validation to allow loading of system libraries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <false/>

    <!-- Allow execution of JIT-compiled code -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <false/>
</dict>
</plist>